<Window x:Name="MainWindow1" x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mController"
        mc:Ignorable="d"
        Title="mController" Height="675" Width="1170" WindowStartupLocation="CenterScreen" Icon="icon.ico" ResizeMode="NoResize" Background="{x:Null}" AllowsTransparency="True" WindowStyle="None">
    <Grid>
        <Rectangle RadiusX="20" RadiusY="20" StrokeThickness="5" Height="91" VerticalAlignment="Top" Fill="#F2000000">
            <Rectangle.Stroke>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#33ABF4FF" Offset="0"/>
                    <GradientStop Color="#334490FF" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Stroke>
        </Rectangle>
        <Rectangle RadiusX="20" RadiusY="20" StrokeThickness="5" Height="91" VerticalAlignment="Top" Fill="#F2000000" Margin="210,96,210,0">
            <Rectangle.Stroke>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#33ABF4FF" Offset="0"/>
                    <GradientStop Color="#334490FF" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Stroke>
        </Rectangle>
        <Rectangle RadiusX="20" RadiusY="20" StrokeThickness="5" Margin="150,192,150,0" Fill="#F2000000">
            <Rectangle.Stroke>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#33ABF4FF" Offset="0"/>
                    <GradientStop Color="#334490FF" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Stroke>
        </Rectangle>
        <DockPanel>

            <StackPanel DockPanel.Dock="Top" Margin="0, 10, 0, 0" Height="70" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                <Button x:Name="button_close" Style="{DynamicResource BaseButtonStyle}" HorizontalAlignment="Left" Margin="0,0,0,0" Padding="10" Height="45" FontSize="16" Background="Black" BorderBrush="#FFFF4A4A">

                    <ContentControl>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="textClose" FontFamily="Lucida Console" Foreground="Lime">Stop using controller and close</TextBlock>
                        </StackPanel>

                    </ContentControl>


                </Button>



                <Button x:Name="button_disable" Style="{DynamicResource BaseButtonStyle}" HorizontalAlignment="Left" Margin="10,0,0,0" Padding="10"  Height="45" FontSize="16" Background="Black" BorderBrush="#FFFFD100">
                    <ContentControl>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="textDisable" FontFamily="Lucida Console" Foreground="Lime">Hide and disable temporarily</TextBlock>
                        </StackPanel>

                    </ContentControl>
                </Button>

                <Button x:Name="button_hide" Style="{DynamicResource BaseButtonStyle}" HorizontalAlignment="Left" Margin="10,0,0,0" Padding="10"  Height="45" FontSize="16" Background="Black" BorderBrush="#FF0051FF">
                    <ContentControl>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="textHide" FontFamily="Lucida Console" Foreground="Lime">Hide and keep using controller</TextBlock>
                        </StackPanel>

                    </ContentControl>

                </Button>

            </StackPanel>

            <StackPanel DockPanel.Dock="Top" Margin="0, 26, 0, 0" Height="70" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                <RadioButton x:Name="controller1rb" VerticalAlignment="Center" Margin="5" FontSize="21" HorizontalAlignment="Center" Foreground="Lime" FontFamily="Lucida Console">Controller 1</RadioButton>
                <RadioButton x:Name="controller2rb" VerticalAlignment="Center" Margin="5" FontSize="21" HorizontalAlignment="Center" Foreground="Lime" FontFamily="Lucida Console">Controller 2</RadioButton>
                <RadioButton x:Name="controller3rb" VerticalAlignment="Center" Margin="5" FontSize="21" HorizontalAlignment="Center" Foreground="Lime" FontFamily="Lucida Console">Controller 3</RadioButton>
                <RadioButton x:Name="controller4rb" VerticalAlignment="Center" Margin="5" FontSize="21" HorizontalAlignment="Center" Foreground="Lime" FontFamily="Lucida Console">Controller 4</RadioButton>
            </StackPanel>



            <TextBlock x:Name="instrucciones" TextWrapping="Wrap" TextAlignment="Center" FontSize="21" Foreground="Lime"  FontFamily="Lucida Console" Height="auto" Margin="0,43.5,0,0"><Run FontWeight="Bold" Text="A"/><Run Text=" "/><LineBreak/><Run Text="Primary click"/><LineBreak/><Run/><LineBreak/><Run FontWeight="Bold" Text="B"/><LineBreak/><Run Text="Secondary click"/><LineBreak/><Run/><LineBreak/><Run FontWeight="Bold" Text="Move Left Joystick"/><LineBreak/><Run Text="Move cursor"/><LineBreak/><Run/><LineBreak/><Run FontWeight="Bold" Text="Push Left Joystick"/><LineBreak/><Run Text="Mid Click"/><LineBreak/><Run/><LineBreak/><Run FontWeight="Bold" Text="Move Right Joystick Horizontally or Vertically"/><LineBreak/><Run Text="Horizontal or Vertical "/><Run Text="Scroll"/><LineBreak/><Run/><LineBreak/><Run FontWeight="Bold" Text="Left/Right Trigger"/><LineBreak/><Run Text="Decrease/Increase speed"/><LineBreak/><Run/><LineBreak/><Run FontWeight="Bold" Text="Trigger Left + Trigger Right + Start"/><LineBreak/><Run Text="Hide/Show this interface"/><LineBreak/><Run/></TextBlock>




        </DockPanel>
    </Grid>
</Window>
